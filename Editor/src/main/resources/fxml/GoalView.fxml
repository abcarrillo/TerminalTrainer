               </children>
            </HBox>
         </children>
      </VBox>
      <VBox GridPane.rowIndex="6">
         <children>
            <Label alignment="TOP_RIGHT" maxWidth="1.7976931348623157E308" text="Tips:" />
            <HBox alignment="TOP_RIGHT" spacing="5.0">
               <children>
                  <Button fx:id="btnAddTip" minWidth="30.0" mnemonicParsing="false" onAction="#onAddTipAction" text="+" />
                  <Button fx:id="btnRemoveTip" minWidth="30.0" mnemonicParsing="false" onAction="#onRemoveTipAction" text="-" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
